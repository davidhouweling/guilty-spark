{
  "name": "guilty-spark",
  "version": "1.0.0",
  "author": "David Houweling",
  "description": "Discord app to pull Halo stats from Halo Waypoint. Works in conjunction with NeatQueue.",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "api",
    "pages",
    "contracts"
  ],
  "engines": {
    "node": ">=24.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidhouweling/guilty-spark.git"
  },
  "bugs": {
    "url": "https://github.com/davidhouweling/guilty-spark/issues"
  },
  "homepage": "https://github.com/davidhouweling/guilty-spark#readme",
  "scripts": {
    "postinstall": "patch-package",
    "start:api": "npm run start --workspace=api",
    "start:pages": "npm run start --workspace=pages",
    "ngrok": "ngrok http 8787",
    "register": "npm run register --workspace=api",
    "test": "vitest run",
    "test:update-snapshot": "vitest -u",
    "test:coverage": "vitest --coverage.enabled true",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint . && npm run stylelint:pages",
    "lint:fix": "eslint . --fix && npm run stylelint:pages:fix",
    "stylelint:pages": "npm run stylelint --workspace=pages",
    "stylelint:pages:fix": "npm run stylelint:fix --workspace=pages",
    "typecheck": "npm run typecheck:api && npm run typecheck:pages",
    "typecheck:api": "npm run typecheck --workspace=api",
    "typecheck:pages": "npm run typecheck --workspace=pages",
    "build:api": "npm run build --workspace=api",
    "build:pages": "npm run build --workspace=pages",
    "deploy:api": "npm run deploy --workspace=api",
    "deploy:pages": "npm run deploy --workspace=pages"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node24": "^24.0.4",
    "@types/node": "^25.3.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-astro": "^1.6.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jsdom": "^27.4.0",
    "ngrok": "^5.0.0-beta.2",
    "patch-package": "^8.0.1",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.6",
    "vitest-mock-extended": "^3.1.0"
  }
}
