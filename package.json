{
  "name": "guilty-spark",
  "version": "1.0.0",
  "author": "David Houweling",
  "description": "Discord app to pull Halo stats from Halo Waypoint. Works in conjunction with NeatQueue.",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "pages",
    "contracts"
  ],
  "engines": {
    "node": ">=24.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidhouweling/guilty-spark.git"
  },
  "bugs": {
    "url": "https://github.com/davidhouweling/guilty-spark/issues"
  },
  "homepage": "https://github.com/davidhouweling/guilty-spark#readme",
  "main": "api/app.mts",
  "scripts": {
    "postinstall": "patch-package",
    "start": "wrangler dev",
    "start:pages": "npm run start --workspace=pages",
    "ngrok": "ngrok http 8787",
    "register": "tsx --env-file=.dev.vars scripts/deploy-commands.mts",
    "test": "vitest run",
    "test:update-snapshot": "vitest -u",
    "test:coverage": "vitest --coverage.enabled true",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:pages": "npm run typecheck --workspace=pages",
    "build:generate-types": "wrangler types",
    "build": "tsc --project tsconfig.build.json",
    "build:pages": "npm run build --workspace=pages",
    "publish": "wrangler deploy",
    "publish:pages": "npm run deploy --workspace=pages"
  },
  "dependencies": {
    "@sentry/cli": "^3.1.0",
    "@sentry/cloudflare": "^10.36.0",
    "@xboxreplay/xboxlive-auth": "^5.1.0",
    "date-fns": "^4.1.0",
    "discord-api-types": "^0.38.37",
    "discord-interactions": "^4.4.0",
    "halo-infinite-api": "^14.2.2",
    "itty-router": "^5.0.22",
    "luxon": "^3.7.2",
    "tinyduration": "^3.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node24": "^24.0.4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jsdom": "^27.4.0",
    "ngrok": "^5.0.0-beta.2",
    "patch-package": "^8.0.1",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.6",
    "vitest-mock-extended": "^3.1.0",
    "wrangler": "^4.60.0"
  }
}
