    "discord-api-types": "^0.38.37",
    "discord-interactions": "^4.4.0",
    "halo-infinite-api": "^14.2.2",
    "itty-router": "^5.0.22",
    "luxon": "^3.7.2",
    "tinyduration": "^3.4.1"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "dotenv": "^17.2.3",
    "wrangler": "^4.60.0"
  }
