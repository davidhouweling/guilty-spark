{
  "name": "@guilty-spark/api",
  "version": "1.0.0",
  "author": "David Houweling",
  "description": "Discord bot API for Halo Infinite statistics and live tracking",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=24.11.0"
  },
  "main": "worker.mts",
  "scripts": {
    "start": "wrangler dev",
    "register": "tsx --env-file=../.dev.vars scripts/deploy-commands.mts",
