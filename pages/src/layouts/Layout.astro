---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Guilty Spark - Halo Infinite Stats for Discord",
  description = "A powerful Discord bot that brings Halo Infinite match statistics to your server. Track custom games, generate HCS maps, and analyze player performance.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/guilty-spark-h3.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oxanium:wght@400;500;600;700&family=Saira+Condensed:wght@600;700;800&family=Orbitron:wght@600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph / Discord -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://guilty-spark.app/guilty-spark-h3.png" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "SoftwareApplication",
            "name": "Guilty Spark",
            "applicationCategory": "UtilitiesApplication",
            "operatingSystem": "Discord",
            "description": "A powerful Discord bot that brings Halo Infinite match statistics to your server. Track custom games, generate HCS maps, and analyze player performance with real-time monitoring.",
            "author": {
              "@type": "Person",
              "name": "David Houweling",
              "url": "https://github.com/davidhouweling"
            },
            "installUrl": "https://discord.com/oauth2/authorize?client_id=1290269474536034357&permissions=311385476096&integration_type=0&scope=bot+applications.commands"
          },
          {
            "@type": "Organization",
            "name": "Guilty Spark",
            "url": "https://guilty-spark.app",
            "logo": "https://guilty-spark.app/guilty-spark-h3.png",
            "sameAs": ["https://github.com/davidhouweling/guilty-spark", "https://discord.gg/WS7zG8GDKY"],
            "contactPoint": {
              "@type": "ContactPoint",
              "contactType": "Customer Support",
              "url": "https://discord.gg/WS7zG8GDKY"
            }
          },
          {
            "@type": "WebSite",
            "name": "Guilty Spark",
            "url": "https://guilty-spark.app",
            "description": "Halo Infinite statistics and live match tracking for Discord",
            "inLanguage": "en-US"
          }
        ]
      }
    </script>

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    /* Halo Terminal Color Palette */
    --color-terminal-primary: #00d4ff;
    --color-terminal-secondary: #00ffaa;
    --color-spark-orange: #ff8c00;
    --color-spark-amber: #ffb347;
    --color-background: #0a0e17;
    --color-background-elevated: #0f1419;
    --color-background-card: #141a24;
    --color-text-primary: #e8f4f8;
    --color-text-secondary: #8fa3b0;
    --color-border: #1a3a4a;
    --color-border-glow: rgba(0, 212, 255, 0.3);

    /* Typography - Halo-inspired fonts */
    --font-display: "Saira Condensed", "Oxanium", sans-serif;
    --font-body: "Oxanium", -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
    --font-mono: "Courier New", monospace;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-body);
    background: var(--color-background);
    color: var(--color-text-primary);
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    line-height: 1.6;
    position: relative;
    overflow-x: hidden;
  }

  /* Forerunner grid background pattern */
  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 212, 255, 0.03) 2px,
        rgba(0, 212, 255, 0.03) 4px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        rgba(0, 212, 255, 0.03) 2px,
        rgba(0, 212, 255, 0.03) 4px
      );
    background-size: 100px 100px;
    pointer-events: none;
    z-index: 0;
  }

  /* Scanline effect */
  body::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.15),
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px,
      transparent 2px
    );
    pointer-events: none;
    z-index: 1;
    opacity: 0.3;
  }

  code {
    font-family: var(--font-mono);
    background: rgba(0, 212, 255, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  a {
    color: var(--color-terminal-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-spark-orange);
  }
</style>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
