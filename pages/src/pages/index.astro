<style>
  /* Layout & Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  main {
    position: relative;
    z-index: 2;
  }

  /* Navigation */
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(10, 14, 23, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    box-shadow: 0 4px 20px rgba(0, 212, 255, 0.1);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-logo {
    width: 40px;
    height: 40px;
    transform: scaleX(-1);
    filter: drop-shadow(0 0 10px var(--color-spark-orange));
  }

  .nav-title {
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--color-terminal-primary);
    text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.2s ease;
    position: relative;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-terminal-primary);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-terminal-primary);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    padding: 8rem 2rem 4rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hero-badge {
    display: inline-block;
    width: fit-content;
    padding: 0.5rem 1rem;
    background: rgba(0, 212, 255, 0.1);
    border: 1px solid var(--color-terminal-primary);
    color: var(--color-terminal-primary);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 900;
    line-height: 1;
    letter-spacing: 0.05em;
    color: var(--color-terminal-primary);
    text-shadow:
      0 0 20px rgba(0, 212, 255, 0.8),
      0 0 40px rgba(0, 212, 255, 0.4);
    font-family: var(--font-display);
  }

  .glitch {
    position: relative;
    display: inline-block;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-spark-orange);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-display);
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    max-width: 600px;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-terminal-primary);
    text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }

  .hero-stats-note {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    opacity: 0.7;
    margin-top: 0rem;
    text-align: left;
    font-style: italic;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .spark-orb {
    position: relative;
    width: 400px;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .spark-orb::before {
    content: "";
    position: absolute;
    inset: -20px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(255, 140, 0, 0.3) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
  }

  .spark-orb::after {
    content: "";
    position: absolute;
    inset: -40px;
    border-radius: 50%;
    border: 2px solid var(--color-terminal-primary);
    opacity: 0.3;
    animation: rotate 15s linear infinite reverse;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .spark-orb img {
    position: relative;
    width: 350px;
    height: auto;
    filter: drop-shadow(0 0 40px var(--color-spark-orange)) drop-shadow(0 0 20px var(--color-spark-amber));
    animation: float 6s ease-in-out infinite;
    transform: scaleX(-1); /* Flip to face left toward the text */
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 2px solid;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .btn-icon {
    position: relative;
    z-index: 1;
    font-size: 1.25rem;
  }

  .btn-icon-img {
    position: relative;
    z-index: 1;
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .btn-icon-flipped {
    transform: scaleX(-1);
  }

  .btn-primary .btn-icon-img {
    filter: brightness(0);
  }

  .btn-secondary .btn-icon-img {
    filter: brightness(0) saturate(0%) invert(62%) sepia(84%) saturate(2527%) hue-rotate(357deg) brightness(103%)
      contrast(102%);
  }

  .btn-secondary:hover .btn-icon-img {
    filter: brightness(0);
  }

  .btn-primary {
    background: var(--color-terminal-primary);
    border-color: var(--color-terminal-primary);
    color: var(--color-background);
    box-shadow: 0 0 20px rgba(0, 212, 255, 0.4);
  }

  .btn-primary:hover {
    background: var(--color-terminal-secondary);
    border-color: var(--color-terminal-secondary);
    box-shadow: 0 0 30px rgba(0, 255, 170, 0.6);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    border-color: var(--color-spark-orange);
    color: var(--color-spark-orange);
  }

  .btn-secondary:hover {
    background: var(--color-spark-orange);
    border-color: var(--color-spark-orange);
    color: var(--color-background);
    box-shadow: 0 0 20px rgba(255, 140, 0, 0.4);
    transform: translateY(-2px);
  }

  .btn-large {
    padding: calc(1.25rem + 2px) calc(2.5rem + 2px);
    font-size: 1.125rem;
  }

  /* Section Title */
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    color: var(--color-terminal-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    font-family: var(--font-display);
  }

  .section-title-line {
    flex: 1;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--color-terminal-primary), transparent);
    max-width: 200px;
  }

  /* Features Section */
  .features {
    padding: 6rem 0;
    background: linear-gradient(180deg, transparent, rgba(0, 212, 255, 0.03), transparent);
  }

