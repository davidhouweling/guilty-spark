    <!-- Demo Section -->
    <section id="demo" class="demo">
      <div class="container">
        <h2 class="section-title">
          <span class="section-title-line"></span>
          OPERATIONAL DEMONSTRATIONS
          <span class="section-title-line"></span>
        </h2>

        <div class="demo-showcase">
          <div class="demo-item">
            <div class="demo-content">
              <h3 class="demo-title">Statistical Analysis</h3>
              <p class="demo-description">
                Query completed combat scenarios with the <code>/stats</code> command. I shall identify all participants,
