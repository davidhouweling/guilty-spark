---
interface Props {
  href: string;
  variant?: "primary" | "secondary";
  size?: "default" | "large";
  target?: "_blank" | "_self";
  class?: string;
}

const { href, variant = "primary", size = "default", target, class: className } = Astro.props;
---

<a href={href} target={target} class:list={["halo-btn", `btn-${variant}`, { large: size === "large" }, className]}>
  <span class="btn-corner tl"></span>
  <span class="btn-corner tr"></span>
  <span class="btn-corner bl"></span>
  <span class="btn-corner br"></span>
  <span class="btn-content">
    <slot />
  </span>
</a>

<style>
  /* Halo Buttons */
  .halo-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    font-family: "Oxanium", sans-serif;
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-decoration: none;
    background: var(--halo-teal-darker);
    border: 1px solid var(--halo-teal-primary);
    color: var(--halo-white);
    transition: all 0.3s ease;
    overflow: hidden;
    text-transform: uppercase;
  }

  .halo-btn.large {
    padding: 1.25rem 3rem;
    font-size: 1.1rem;
  }

  .halo-btn::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(93, 212, 216, 0.1), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .halo-btn:hover::before {
    opacity: 1;
  }

  .halo-btn:hover {
    border-color: var(--halo-white);
    box-shadow: 0 0 20px rgba(93, 212, 216, 0.5);
    color: var(--halo-white);
    text-shadow: 0 0 10px rgba(93, 212, 216, 0.8);
  }

  .btn-corner {
    position: absolute;
    width: 12px;
    height: 12px;
    border: 1px solid var(--halo-teal-primary);
    transition: all 0.3s ease;
  }

  .btn-corner.tl {
    top: -1px;
    left: -1px;
    border-right: none;
    border-bottom: none;
  }

  .btn-corner.tr {
    top: -1px;
    right: -1px;
    border-left: none;
    border-bottom: none;
  }

  .btn-corner.bl {
    bottom: -1px;
    left: -1px;
    border-right: none;
    border-top: none;
  }

  .btn-corner.br {
    bottom: -1px;
    right: -1px;
    border-left: none;
    border-top: none;
  }

  .halo-btn:hover .btn-corner {
    border-color: var(--halo-white);
    box-shadow: 0 0 8px rgba(93, 212, 216, 0.8);
  }

  .btn-content {
    position: relative;
    z-index: 1;
  }

  .btn-primary {
    background: var(--halo-teal-dark);
  }

  .btn-secondary {
    background: transparent;
  }
</style>
