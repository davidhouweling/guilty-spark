---
// Footer component
import Logo from "../logo/logo.astro";
import Container from "../container/container.astro";
import { SUPPORT_SERVER_URL, GITHUB_URL, GITHUB_REPO_OWNER } from "../../constants";
import styles from "./footer.module.css";

const footerSections = [
  {
    heading: "Resources",
    links: [
      { href: GITHUB_URL, label: "GitHub Repository" },
      { href: `${GITHUB_URL}/issues`, label: "Report Issues" },
    ],
  },
  {
    heading: "Community",
    links: [
      { href: SUPPORT_SERVER_URL, label: "Discord Server" },
      { href: `https://github.com/${GITHUB_REPO_OWNER}`, label: "Developer" },
    ],
  },
];
---

<footer class={styles.haloFooter}>
  <Container>
    <div class={styles.footerContent}>
      <div class={styles.footerSection}>
        <Logo variant="footer" />
        <p class={styles.footerDesc}>Installation 04 Combat Statistics Interface</p>
      </div>

      {
        footerSections.map((section) => (
          <div class={styles.footerSection}>
            <h4 class={styles.footerHeading}>{section.heading}</h4>
            {section.links.map((link) => (
              <a class={styles.footerLink} href={link.href} target="_blank" rel="noopener noreferrer">
                {link.label}
              </a>
            ))}
          </div>
        ))
      }
    </div>

    <div class={styles.footerBottom}>
      <div class={styles.footerLegal}>Â© David Houweling. Not affiliated with Microsoft or 343 Industries.</div>
      <div class={styles.footerVersion}>Monitoring since October 2024</div>
    </div>
  </Container>
</footer>
