---
// Footer component
import Logo from "./logo.astro";
import Container from "./container.astro";
import { SUPPORT_SERVER_URL, GITHUB_URL, GITHUB_REPO_OWNER } from "../constants";

const footerSections = [
  {
    heading: "Resources",
    links: [
      { href: GITHUB_URL, label: "GitHub Repository" },
      { href: `${GITHUB_URL}/issues`, label: "Report Issues" },
    ],
  },
  {
    heading: "Community",
    links: [
      { href: SUPPORT_SERVER_URL, label: "Discord Server" },
      { href: `https://github.com/${GITHUB_REPO_OWNER}`, label: "Developer" },
    ],
  },
];
---

<footer class="halo-footer">
  <Container>
    <div class="footer-content">
      <div class="footer-section">
        <Logo variant="footer" />
        <p class="footer-desc">Installation 04 Combat Statistics Interface</p>
      </div>

      {
        footerSections.map((section) => (
          <div class="footer-section">
            <h4 class="footer-heading">{section.heading}</h4>
            {section.links.map((link) => (
              <a href={link.href} target="_blank" rel="noopener noreferrer">
                {link.label}
              </a>
            ))}
          </div>
        ))
      }
    </div>

    <div class="footer-bottom">
      <div class="footer-legal">Â© David Houweling. Not affiliated with Microsoft or 343 Industries.</div>
      <div class="footer-version">Monitoring since October 2024</div>
    </div>
  </Container>
</footer>

<style>
  /* ============================================ */
  /* Base Styles - Mobile First                  */
  /* ============================================ */

  /* Footer */
  .halo-footer {
    background: var(--halo-bg-primary);
    border-top: 1px solid var(--halo-teal-dark);
    padding: 3rem 0 1.5rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto 3rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .footer-desc {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--halo-gray);
    line-height: 1.6;
  }

  .footer-heading {
    font-family: var(--font-heading);
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--halo-white);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
  }

  .footer-section a {
    display: block;
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--halo-gray);
    text-decoration: none;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--halo-teal-primary);
    padding-left: 0.5rem;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid var(--halo-teal-darker);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 1rem;
  }

  .footer-legal,
  .footer-version {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: var(--halo-gray);
  }

  .footer-version {
    font-family: var(--font-mono);
    color: var(--halo-teal-dark);
    text-transform: uppercase;
  }

  /* ============================================ */
  /* Media Queries - Tablet and Above            */
  /* ============================================ */

  @media (--tablet-viewport) {
    .halo-footer {
      padding: 4rem 0 2rem;
    }

    .footer-content {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 3rem;
    }

    .footer-desc {
      font-size: 0.95rem;
    }

    .footer-heading {
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }

    .footer-section a {
      font-size: 0.95rem;
      margin-bottom: 0.75rem;
    }

    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }

    .footer-legal,
    .footer-version {
      font-size: 0.9rem;
    }
  }
</style>
