---
interface Props {
  class?: string | undefined;
  tagName?:
    | "address"
    | "article"
    | "aside"
    | "blockquote"
    | "details"
    | "dialog"
    | "dd"
    | "div"
    | "dl"
    | "dt"
    | "fieldset"
    | "figcaption"
    | "figure"
    | "footer"
    | "form"
    | "h1"
    | "h2"
    | "h3"
    | "h4"
    | "h5"
    | "h6"
    | "header"
    | "hgroup"
    | "hr"
    | "li"
    | "main"
    | "nav"
    | "ol"
    | "p"
    | "pre"
    | "section"
    | "table"
    | "ul"
    | undefined;
}

const { class: className, tagName: Element = "div" } = Astro.props;
---

<Element class:list={["container", className]}>
  <slot />
</Element>

<style>
  .container {
    padding-left: var(--gutter-mobile);
    padding-right: var(--gutter-mobile);
    margin-left: auto;
    margin-right: auto;
    max-width: calc(var(--content-width) + (var(--gutter-desktop) * 2));
  }

  @media (--tablet-viewport) {
    .container {
      padding-left: var(--gutter-desktop);
      padding-right: var(--gutter-desktop);
    }
  }
</style>
