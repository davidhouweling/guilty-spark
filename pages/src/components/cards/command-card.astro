---
import BaseCard from "./base-card.astro";
import styles from "./command-card.module.css";

interface Props {
  command: string;
  description: string;
  class?: string;
}

const { command, description, class: className } = Astro.props;
---

<BaseCard variant="accent" padding="none" interactive class:list={[styles.commandCard, className]}>
  <div class={styles.cardBody}>
    <div class={styles.commandName}>{command}</div>
    <p class={styles.commandText}>{description}</p>
    <slot />
  </div>
</BaseCard>
