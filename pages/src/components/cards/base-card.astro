---
import styles from "../../styles/components/base-card.module.css";

interface Props {
  tag?: "article" | "aside" | "div" | "figure" | "li" | "section" | "span";
  variant?: "surface" | "muted" | "accent";
  padding?: "none" | "sm" | "md" | "lg";
  interactive?: boolean;
  class?: string;
}

const {
  tag: Element = "div",
  variant = "surface",
  padding = "md",
  interactive = false,
  class: className,
} = Astro.props;

const variantClass = variant === "surface" ? styles.surface : variant === "muted" ? styles.muted : styles.accent;

const paddingClass =
  padding === "none"
    ? styles.padNone
    : padding === "sm"
      ? styles.padSm
      : padding === "md"
        ? styles.padMd
        : styles.padLg;
---

<Element class:list={[styles.card, variantClass, paddingClass, interactive && styles.cardHover, className]}>
  <slot />
</Element>
