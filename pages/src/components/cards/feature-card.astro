---
import BaseCard from "./base-card.astro";
import styles from "../../styles/components/feature-card.module.css";

interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
const hasIcon = Astro.slots.has("icon");
---

<BaseCard padding="none" interactive class:list={[styles.featureCard, className]}>
  <div class={styles.cardBody}>
    {
      hasIcon && (
        <div class={styles.featureIcon}>
          <slot name="icon" />
        </div>
      )
    }

    <h3 class={styles.cardTitle}>{title}</h3>
    <p class={styles.cardText}>{description}</p>
    <slot />
  </div>
</BaseCard>
