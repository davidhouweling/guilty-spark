---
import BaseCard from "./base-card.astro";
import styles from "./demo-card.module.css";

interface Props {
  title: string;
  description: string;
  iconVariant?: "default" | "image";
  class?: string;
}

const { title, description, iconVariant = "default", class: className } = Astro.props;
const hasIcon = Astro.slots.has("icon");
const hasMedia = Astro.slots.has("media");
---

<BaseCard padding="lg" interactive class:list={[styles.demoCard, className]}>
  <div class={styles.demoCardInner}>
    <div class={styles.demoHeader}>
      {
        hasIcon && (
          <div class:list={[styles.demoIcon, iconVariant === "image" && styles.demoIconImage]}>
            <slot name="icon" />
          </div>
        )
      }
      <h3 class={styles.demoTitle}>{title}</h3>
    </div>

    <p class={styles.demoDescription}>{description}</p>

    {
      hasMedia && (
        <div class={styles.demoMedia}>
          <slot name="media" />
        </div>
      )
    }
    <slot />
  </div>
</BaseCard>
