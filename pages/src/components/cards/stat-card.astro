---
import BaseCard from "./base-card.astro";
import styles from "./stat-card.module.css";

interface Props {
  value: string;
  label: string;
  class?: string;
}

const { value, label, class: className } = Astro.props;
---

<BaseCard padding="none" class:list={["stat-card", className]}>
  <div class={styles.cardBody}>
    <div class={styles.statValue}>{value}</div>
    <div class={styles.statLabel}>{label}</div>
    <slot />
  </div>
</BaseCard>
