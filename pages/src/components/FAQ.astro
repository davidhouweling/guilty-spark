---
// FAQ component template
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;
---

<section id="faq" class="faq-section">
  <div class="section-header">
    <h2 class="section-title">
      <span class="title-bracket">&lt;</span>
      Frequently Asked Queries
      <span class="title-bracket">/&gt;</span>
    </h2>
    <div class="section-subtitle">Knowledge Base Protocol</div>
  </div>

  <div class="faq-container">
    {
      items.map((item) => (
        <div class="faq-item">
          <h3 class="faq-question">{item.question}</h3>
          <p class="faq-answer" set:html={item.answer} />
        </div>
      ))
    }
  </div>
</section>

<style>
  .faq-section {
    padding: 6rem 2rem;
    background: var(--halo-bg-primary);
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: "Saira Condensed", sans-serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    letter-spacing: 0.1em;
    color: var(--halo-white);
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .title-bracket {
    color: var(--halo-teal-primary);
    text-shadow: 0 0 10px rgba(93, 212, 216, 0.5);
  }

  .section-subtitle {
    font-family: "Oxanium", sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--halo-gray);
    text-transform: uppercase;
  }

  .faq-container {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .faq-item {
    padding: 2rem;
    background: rgba(15, 40, 48, 0.4);
    border: 1px solid var(--halo-teal-dark);
    border-left: 3px solid var(--halo-teal-primary);
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    background: rgba(15, 40, 48, 0.6);
    border-left-width: 5px;
    box-shadow: 0 0 30px rgba(93, 212, 216, 0.15);
  }

  .faq-question {
    font-family: "Saira Condensed", sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    color: var(--halo-teal-primary);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .faq-answer {
    font-family: "Oxanium", sans-serif;
    font-size: 1.05rem;
    font-weight: 400;
    line-height: 1.8;
    color: var(--halo-gray);
  }

  .faq-answer strong {
    color: var(--halo-white);
    font-weight: 600;
  }

  .faq-answer code {
    font-family: "Orbitron", monospace;
    font-size: 0.95em;
    padding: 0.2em 0.5em;
    background: rgba(13, 77, 82, 0.5);
    border: 1px solid var(--halo-teal-dark);
    border-radius: 3px;
    color: var(--halo-teal-primary);
  }

  .faq-answer a {
    color: var(--halo-teal-primary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .faq-answer a:hover {
    color: var(--halo-white);
    border-bottom-color: var(--halo-teal-primary);
    text-shadow: 0 0 8px rgba(93, 212, 216, 0.6);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .faq-section {
      padding: 4rem 1.5rem;
    }

    .faq-item {
      padding: 1.5rem;
    }

    .faq-question {
      font-size: 1.2rem;
    }

    .faq-answer {
      font-size: 1rem;
    }
  }
</style>
