<style>
  /* Footer */
  .halo-footer {
    background: var(--halo-bg-primary);
    border-top: 1px solid var(--halo-teal-dark);
    padding: 4rem 2rem 2rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto 3rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: "Saira Condensed", sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--halo-teal-primary);
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .footer-logo img {
    width: 40px;
    height: 40px;
    filter: drop-shadow(0 0 8px rgba(93, 212, 216, 0.5));
  }

  .footer-desc {
    font-family: "Oxanium", sans-serif;
    font-size: 0.95rem;
    color: var(--halo-gray);
    line-height: 1.6;
  }

  .footer-heading {
    font-family: "Oxanium", sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--halo-white);
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .footer-section a {
    display: block;
    font-family: "Oxanium", sans-serif;
    font-size: 0.95rem;
    color: var(--halo-gray);
    text-decoration: none;
    margin-bottom: 0.75rem;
    transition: all 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--halo-teal-primary);
    padding-left: 0.5rem;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid var(--halo-teal-darker);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-legal,
  .footer-version {
    font-family: "Oxanium", sans-serif;
    font-size: 0.85rem;
    color: var(--halo-gray);
  }

  .footer-version {
    font-family: "Orbitron", monospace;
    color: var(--halo-teal-dark);
    text-transform: uppercase;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
