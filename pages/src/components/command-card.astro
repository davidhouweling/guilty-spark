---
import BaseCard from "./cards/base-card.astro";

interface Props {
  command: string;
  description: string;
  class?: string;
}

const { command, description, class: className } = Astro.props;
---

<BaseCard variant="accent" padding="none" interactive class:list={["command-card", className]}>
  <div class="card-body">
    <div class="command-name">{command}</div>
    <p class="command-text">{description}</p>
    <slot />
  </div>
</BaseCard>

<style>
  .command-card {
    border-left: 3px solid var(--halo-teal-primary);
  }

  .command-card.card-hover:hover {
    background: rgba(13, 77, 82, 0.5);
    border-left-width: 5px;
    box-shadow: 0 0 20px rgba(93, 212, 216, 0.2);
  }

  .card-body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .command-name {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--halo-teal-primary);
  }

  .command-text {
    font-family: var(--font-body);
    font-size: 0.95rem;
    font-weight: 400;
    color: var(--halo-gray);
    line-height: 1.6;
    margin: 0;
  }

  @media (--tablet-viewport) {
    .card-body {
      padding: 1.5rem;
    }

    .command-name {
      font-size: 1.3rem;
    }

    .command-text {
      font-size: 1rem;
    }
  }
</style>
